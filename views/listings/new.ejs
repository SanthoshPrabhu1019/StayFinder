<!-- listings/new.ejs -->

<% layout("/layouts/boilerplate") %>
  <div class="row mt-3">

    <div class="col-8 offset-2">
      <br>
      <h3>Create a new listing</h3>
      <form method="POST" id="listing-form" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">

        <div class="mb-3">
          <label for="title" class="form-label">Title</label>
          <input name="listing[title]" placeholder="Enter title" type="text" class="form-control" required>
          <div class="invalid-feedback">Title is required.</div>
        </div>

        <div class="mb-3">
          <label for="description" class="form-label">Description</label>
          <textarea name="listing[description]" placeholder="Enter description" class="form-control"
            required></textarea>
          <div class="invalid-feedback">Description is required.</div>
        </div>
        <div class="mb-3">
          <label for="image" class="form-label">Upload Listing Image</label>
          <input name="listing[image]" placeholder="Upload Listing Image" type="file" class="form-control">
        </div>
        <div class="mb-3" id="category-group">
          <label class="form-label">Choose Categories</label>
          <div class="row">

            <div class="col-md-3 col-sm-6">
              <div class="form-check">
                <input class="form-check-input" type="checkbox" name="listing[category]" value="Trending"
                  id="catTrending">
                <label class="form-check-label" for="catTrending">Trending</label>
              </div>
            </div>

            <div class="col-md-3 col-sm-6">
              <div class="form-check">
                <input class="form-check-input" type="checkbox" name="listing[category]" value="Rooms" id="catRooms">
                <label class="form-check-label" for="catRooms">Rooms</label>
              </div>
            </div>

            <div class="col-md-3 col-sm-6">
              <div class="form-check">
                <input class="form-check-input" type="checkbox" name="listing[category]" value="Mountains"
                  id="catMountains">
                <label class="form-check-label" for="catMountains">Mountains</label>
              </div>
            </div>

            <div class="col-md-3 col-sm-6">
              <div class="form-check">
                <input class="form-check-input" type="checkbox" name="listing[category]" value="Castles"
                  id="catCastles">
                <label class="form-check-label" for="catCastles">Castles</label>
              </div>
            </div>

            <div class="col-md-3 col-sm-6">
              <div class="form-check">
                <input class="form-check-input" type="checkbox" name="listing[category]" value="Amazing Pools"
                  id="catPools">
                <label class="form-check-label" for="catPools">Amazing Pools</label>
              </div>
            </div>

            <div class="col-md-3 col-sm-6">
              <div class="form-check">
                <input class="form-check-input" type="checkbox" name="listing[category]" value="Camping"
                  id="catCamping">
                <label class="form-check-label" for="catCamping">Camping</label>
              </div>
            </div>

            <div class="col-md-3 col-sm-6">
              <div class="form-check">
                <input class="form-check-input" type="checkbox" name="listing[category]" value="Farm" id="catFarm">
                <label class="form-check-label" for="catFarm">Farm</label>
              </div>
            </div>

            <div class="col-md-3 col-sm-6">
              <div class="form-check">
                <input class="form-check-input" type="checkbox" name="listing[category]" value="Arctic" id="catArctic">
                <label class="form-check-label" for="catArctic">Arctic</label>
              </div>
            </div>

            <div class="col-md-3 col-sm-6">
              <div class="form-check">
                <input class="form-check-input" type="checkbox" name="listing[category]" value="Beach" id="catBeach">
                <label class="form-check-label" for="catBeach">Beach</label>
              </div>
            </div>

            <div class="col-md-3 col-sm-6">
              <div class="form-check">
                <input class="form-check-input" type="checkbox" name="listing[category]" value="Boat" id="catBoat">
                <label class="form-check-label" for="catBoat">Boat</label>
              </div>
            </div>

            <div class="col-md-3 col-sm-6">
              <div class="form-check">
                <input class="form-check-input" type="checkbox" name="listing[category]" value="Ski-in/out" id="catSki">
                <label class="form-check-label" for="catSki">Ski-in/out</label>
              </div>
            </div>

            <div class="col-md-3 col-sm-6">
              <div class="form-check">
                <input class="form-check-input" type="checkbox" name="listing[category]" value="Apartment"
                  id="catApartment">
                <label class="form-check-label" for="catApartment">Apartment</label>
              </div>
            </div>

            <div class="col-md-3 col-sm-6">
              <div class="form-check">
                <input class="form-check-input" type="checkbox" name="listing[category]" value="Woodlands"
                  id="catWoodlands">
                <label class="form-check-label" for="catWoodlands">Woodlands</label>
              </div>
            </div>

            <div class="col-md-3 col-sm-6">
              <div class="form-check">
                <input class="form-check-input" type="checkbox" name="listing[category]" value="Lake" id="catLake">
                <label class="form-check-label" for="catLake">Lake</label>
              </div>
            </div>

            <div class="col-md-3 col-sm-6">
              <div class="form-check">
                <input class="form-check-input" type="checkbox" name="listing[category]" value="Cabins" id="catCabins">
                <label class="form-check-label" for="catCabins">Cabins</label>
              </div>
            </div>

            <div class="col-md-3 col-sm-6">
              <div class="form-check">
                <input class="form-check-input" type="checkbox" name="listing[category]" value="Countryside"
                  id="catCountryside">
                <label class="form-check-label" for="catCountryside">Countryside</label>
              </div>
            </div>

            <div class="col-md-3 col-sm-6">
              <div class="form-check">
                <input class="form-check-input" type="checkbox" name="listing[category]" value="Campsite"
                  id="catCampsite">
                <label class="form-check-label" for="catCampsite">Campsite</label>
              </div>
            </div>

            <div class="col-md-3 col-sm-6">
              <div class="form-check">
                <input class="form-check-input" type="checkbox" name="listing[category]" value="Historical Homes"
                  id="catHistorical">
                <label class="form-check-label" for="catHistorical">Historical Homes</label>
              </div>
            </div>

            <div class="col-md-3 col-sm-6">
              <div class="form-check">
                <input class="form-check-input" type="checkbox" name="listing[category]" value="Vineyard"
                  id="catVineyard">
                <label class="form-check-label" for="catVineyard">Vineyard</label>
              </div>
            </div>

            <div class="col-md-3 col-sm-6">
              <div class="form-check">
                <input class="form-check-input" type="checkbox" name="listing[category]" value="Mansions"
                  id="catMansions">
                <label class="form-check-label" for="catMansions">Mansions</label>
              </div>
            </div>

          </div>
          <div class="invalid-feedback">Please select at least one category.</div>
        </div>


        <div class="row">
          <div class="mb-3 col-md-4">
            <label for="price" class="form-label">Price</label>
            <input name="listing[price]" placeholder="Enter Price" type="number" class="form-control">
            <div class="invalid-feedback">Price must be a valid number greater than 0.</div>
          </div>

          <div class="mb-3 col-md-8">
            <label for="location" class="form-label">Location</label>
            <input name="listing[location]" placeholder="Enter Location" type="text" class="form-control" required>
            <div class="invalid-feedback">Location is required.</div>
          </div>
        </div>

        <div class="mb-3">
          <label for="country" class="form-label">Country</label>
          <input name="listing[country]" placeholder="Enter Country" type="text" class="form-control" required>
          <div class="invalid-feedback">Country is required.</div>
        </div>

        <button class="btn btn-dark add-btn mt-3">Add</button>
      </form>
    </div>
  </div>