<!-- /listings/show.ejs -->

<% layout("/layouts/boilerplate") %>
    <div class="row">
        <div class="col-8 offset-2">
            <br>
            <h3>
                <%= listing.title %> :
            </h3>

            <div class="card col-9 listing-card">

                <img class="card-img-top show-img " src="<%= listing.image %>" alt="listing_image">

                <br>
                <div class="card-body">
                    <p class="card-text">

                        <%= listing.description%>
                            <br>
                            &#8377; <%= (listing.price || 0).toLocaleString("en-IN") %> / night

                                <br>
                                <%= listing.location%>
                                    <br>
                                    <%= listing.country%>

                    </p>
                </div>
            </div>
            <div class="show-btn col">
                <a href="/listings/<%=listing._id%>/edit" class=" btn btn-dark col-1 btn-blue">Edit</a>

                <form method="POST" action="/listings/<%=listing._id%>?_method=DELETE">
                    <button class="btn btn-dark offset-4 btn-blue"> Delete</button>
                </form>
            </div>
            <div class="col-8 ">
                <br>

                <h4>Leave a Review</h4>
                <form>
                    <div>
                        <label for="rating" class="form-label">Rating</label>
                        <input type="range" min="1" max="5" id="rating" name="review[rating]" class="form-range">
                    </div>
                    <div>
                        <label for="comment" class="form-label">Comments</label>
                        <textarea name="review[comment]" id="comment" cols="30" rows="5" class="form-control"></textarea>
                    </div>
                    <br>
                    <button class=" btn btn-dark btn-blue">Submit</button>
                </form>
            </div>

        </div>
    </div>