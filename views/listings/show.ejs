<!-- /listings/show.ejs -->

<% layout("/layouts/boilerplate") %>
    <div class="row">
        <div class="col-8 offset-2">
            <br>
            <h3>
                <%= listing.title %> :
            </h3>

            <div class="card col-9 listing-card">

                <img class="card-img-top show-img " src="<%= listing.image %>" alt="listing_image">

                <br>
                <div class="card-body">
                    <p class="card-text">

                        <%= listing.description%>
                            <br>
                            &#8377; <%= (listing.price || 0).toLocaleString("en-IN") %> / night

                                <br>
                                <%= listing.location%>
                                    <br>
                                    <%= listing.country%>

                    </p>
                </div>
            </div>
            <div class="show-btn col">
                <a href="/listings/<%=listing._id%>/edit" class=" btn btn-dark col-1 btn-blue">Edit</a>

                <form method="POST" action="/listings/<%=listing._id%>?_method=DELETE">
                    <button class="btn btn-dark offset-4 btn-blue"> Delete</button>
                </form>
            </div>
            <div class="col-8 mt-3 mb-3 ">
                <hr>

                <br>

                <h4>Leave a Review</h4>
                <form action="/listings/<%= listing._id%>/reviews" method="POST" novalidate class="needs-validation">
                    <div>
                        <label for="rating" class="form-label">Rating</label>
                        <input type="range" min="1" max="5" id="rating" name="review[ratings]" class="form-range">
                    </div>
                    <div>
                        <label for="comment" class="form-label">Comments</label>
                        <textarea name="review[comment]" id="comment" cols="30" rows="5" class="form-control"
                            required></textarea>
                        <div class="invalid-feedback">
                            Please add comments for review
                        </div>
                    </div>
                    <br>
                    <button class=" btn btn-dark btn-blue">Submit</button>
                </form>
            </div>

            <p><b>Reviews</b></p>
            <div class="row">
                <% for (let r of listing.review) { %>
                    <div class="card col-md-5 col-lg-4 ms-3 mb-3">
                        <div class="card-body">
                            <h5 class="card-title">Jane Doe</h5>
                            <p class="card-text">
                                <%= r.comment %>
                            </p>
                            <p class="card-text">
                                <%= r.ratings %> stars
                            </p>
                        </div>
                        <form class="mb-3" method="POST" action="/listings/<%=listing._id%>/reviews/<%=r._id%>?_method=DELETE">
                           <button class="btn btn-sm btn-dark">Delete</button>
                        </form>
                    </div>
                    <% } %>
            </div>

            </ul>
        </div>
    </div>